{
    "name": "worldhouse/worldhouse",
    "description": "Repository for World House",
    "license": "MIT",
    "authors": [
      {
        "name": "World House",
        "email": "jared@worldhouse.dev"
      }
    ],
    "repositories": [
      {
        "type": "composer",
        "url": "https://wpackagist.org",
        "only": [
          "wpackagist-plugin/*",
          "wpackagist-theme/*"
        ]
      }
    ],
    "require": {
      "php": ">=8.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
      "lint": "./vendor/bin/phpcs --standard=./phpcs.xml",
      "lint-fix": "./vendor/bin/phpcbf --standard=./phpcs.xml"
    },
    "extra": {
      "installer-paths": {
        "plugins/{$name}/": [
          "type:wordpress-plugin"
        ]
      }
    },
    "config": {
      "allow-plugins": {
        "composer/installers": true
      }
    }
  }
